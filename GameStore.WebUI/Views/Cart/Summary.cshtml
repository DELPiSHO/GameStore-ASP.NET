@model GameStore.Domain.Entities.Cart

<div class="navbar-right">
    @Html.ActionLink("Koszyk", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-success navbar-btn" })
</div>

<div class="navbar-text navbar-right">
    <b>Twój Koszyk:</b>
    @Model.Lines.Sum(x => x.Quantity) gra/gier,
    @Model.ComputeTotalValue().ToString("# zł")
</div>

<div class="navbar-left">
    @Html.ActionLink("Admin Panel", "Index", "Admin",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-info navbar-btn" })
</div>